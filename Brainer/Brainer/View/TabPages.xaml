<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns="http://xamarin.com/schemas/2014/forms"            
             NavigationPage.HasNavigationBar="False"
             xmlns:view="clr-namespace:Brainer.TabPage"
             BackgroundColor="#041f5a"
             BarBackgroundColor="#041f5a"
             BarTextColor="#fedb0e"
             xmlns:iosl="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:Brainer.View"
             x:Class="Brainer.View.TabPages">



    <NavigationPage BackgroundColor="#041f5A" BarBackgroundColor="#041f5A"  Icon="ic_directories.png">
        <x:Arguments>
            <view:DirectoryTab />

        </x:Arguments>

    </NavigationPage >

    <NavigationPage  BackgroundColor="#041f5A" BarBackgroundColor="#041f5A"  Icon="peoples.png" >
        <x:Arguments>
            <view:PeopleSearchTab />

        </x:Arguments>

    </NavigationPage >
    <NavigationPage   BackgroundColor="#041f5A" BarBackgroundColor="#041f5A"  Icon="skills.png"  >
        <x:Arguments>
            <view:TopicSkillsTab />

        </x:Arguments>

    </NavigationPage >

    <NavigationPage  BackgroundColor="#041f5A" BarBackgroundColor="#041f5A"  Icon="tab_document.png">
        <x:Arguments>
            <view:DocumentLibraryTab/>

        </x:Arguments>

    </NavigationPage >
</TabbedPage>


